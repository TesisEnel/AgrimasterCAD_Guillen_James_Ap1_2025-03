@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">AgrimasterCAD</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Inicio
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>   
                <AuthorizeView Roles="Administrador" Context="admin">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/admin/agrimensores">
                            <span class="bi bi-person-plus-fill me-2" aria-hidden="true"></span> Agrimensores
                        </NavLink>
                    </div>
                </AuthorizeView>

                <AuthorizeView Roles="Agrimensor" Context="agrimensor">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/agrimensor/solicitudes">
                            <span class="bi bi-clipboard-data me-2" aria-hidden="true"></span> Solicitudes
                        </NavLink>
                    </div>
                </AuthorizeView>

                <AuthorizeView Roles="Cliente" Context="cliente">
                     <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/cliente/solicitudes">
                            <span class="bi bi-file-earmark-text me-2" aria-hidden="true"></span> Mis Solicitudes
                        </NavLink>
                    </div>
                </AuthorizeView>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Perfil
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Cerrar Sesión
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Registrarse
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Iniciar Sesión
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}