@page "/"
@layout EmptyLayout

<PageTitle>AgrimasterCAD</PageTitle>

<header id="header" class="header sticky-top">

    <div class="branding d-flex align-items-cente">

        <div class="container position-relative d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <img src="favicon.png" alt="">
                <h1 class="sitename">AgrimasterCAD</h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="#hero" class="active">Inicio</a></li>
                    <li><a href="#about">Quiénes Somos</a></li>
                    <li><a href="#services">Servicios</a></li>
                    <AuthorizeView Context="auth">
                        <Authorized>
                            <li>
                                <a href="@GetDashboardUrl(auth.User)">Panel</a>
                            </li>
                        </Authorized>

                        <NotAuthorized>
                            <li><a href="/Account/Login">Iniciar Sesión</a></li>
                            <li><a href="/Account/Register">Registrarse</a></li>
                        </NotAuthorized>
                    </AuthorizeView>
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

        </div>

    </div>

</header>

<main class="main">

    <!-- Hero Section -->
    <section id="hero" class="hero section">

        <div class="hero-content">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="content">
                            <h1>Planos y Levantamientos Topográficos Profesionales</h1>
                            <p>Somos expertos en la elaboración de planos, mensuras, deslindes y levantamientos para
